<% include ./header %>

<section class="hero">
  <div class="hero-body">
    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Idade</th>
            <th>Email</th>
            <th>Opções</th>
            <th></th>
          </tr>
        <tbody>
          <% customers.forEach((customer) => { %>
          <tr>
            <td><%= customer.nome %></td>
            <td><%= customer.idade %></td>
            <td><%= customer.email %></td>
            <td>
              <a href="/editar/<%= customer._id %>" title="Editar" class="button is-warning"><i class="fa fa-pencil"></i></a>
            </td>  
            <td> 
              <form action="/excluir/<%= customer._id %>" method="post" class="botao-opcoes">
                <input type="hidden" name="excluir">
                <button class="button is-danger" title="Excluir">
                  <i class="fa fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</section>

<% include ./footer %>
